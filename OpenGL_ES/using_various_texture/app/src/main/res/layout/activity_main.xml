<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:id="@+id/leftButton"
            android:text="LEFT"
            android:onClick="onClickLeft"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            tools:ignore="HardcodedText" />

    <Button
            android:id="@+id/middleUpButton"
            android:text="LEFT"
            android:onClick="onClickUpMiddle"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/middleDownButton"
            android:layout_margin="20dp"
            tools:ignore="HardcodedText" />

    <Button
            android:id="@+id/middleDownButton"
            android:text="LEFT"
            android:onClick="onClickDownMiddle"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/middleUpButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            tools:ignore="HardcodedText" />

    <Button
            android:id="@+id/rightButton"
            android:text="RIGHT"
            android:onClick="onClickRight"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>